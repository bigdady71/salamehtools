{
    "name": "salamehtools/b2b-system",
    "description": "B2B Wholesale Distribution Management Platform",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "dompdf/dompdf": "^2.0",
        "khaled.alshamaa/ar-php": "*",
        "maennchen/zipstream-php": "3.1.2",
        "mpdf/mpdf": "*",
        "phpoffice/phpspreadsheet": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "SalamehTools\\": "src/"
        },
        "files": [
            "includes/db.php",
            "includes/auth.php",
            "includes/guard.php",
            "includes/flash.php"
        ]
    },
    "scripts": {
        "post-update-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
